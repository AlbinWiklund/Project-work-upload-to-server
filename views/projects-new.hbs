{{#if session.isLoggedIn}}  
    {{#if validationErrors.length}}
        <p>Couldn't login because:</p>
        <ul>
            {{#each validationErrors}}
                <li>{{this}}</li>
            {{/each}}
        </ul>

        <form action="/projects/new" method="POST">
            <input type="hidden" name="_csrf" value={{csurfToken}}>
            <div class="form-group">
                <label class="form-label text-bold">Title</label>
                <input type="text" name="title" placeholder="Title" value="{{title}}">
            </div>

            <div class="form-group">
                <label class="form-label text-bold">Description</label>
                <textarea class="form-input textarea" placeholder="Type your feedback here" 
                rows="3" name="description">{{description}}</textarea>
                <button class="btn input-group-btn btn-primary mt-2">Submit</button>
            </div>
        </form>
    {{else}}
        <form action="/projects/new" method="POST">
            <input type="hidden" name="_csrf" value={{csurfToken}}>
            <div class="form-group">
                <label class="form-label text-bold">Title</label>
                <input type="text" name="title" placeholder="Title">
            </div>

            <div class="form-group">
                <label class="form-label text-bold">Description</label>
                <textarea class="form-input textarea" placeholder="Type your feedback here" rows="3" name="description"></textarea>
                <button class="btn input-group-btn btn-primary mt-2">Submit</button>
            </div>
        </form>
    {{/if}}
{{else}}
    <h1>You are not logged in!</h1>
{{/if}}