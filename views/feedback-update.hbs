{{#if session.isLoggedIn}}
    {{#if validationErrors.length}}
        <p>Couldn't login because:</p>
        <ul>
            {{#each validationErrors}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <form action="/projects/feedback/update" method="POST">
            <input type="hidden" name="_csrf" value={{csurfToken}}>
            <input type="hidden" name="feedbackID" value="{{id}}" />
            <div class="form-group">
                <select class="form-select" name="projectSelect">
                    <option value="{{projectTitle.id}}" name="projectID">{{projectTitle.title}}</option>
                    {{#if projects.length}}
                        {{#each projects}}
                            <option value="{{id}}" name="temp">{{title}}</option>
                        {{/each}}
                    {{else}}
                        <p>This guy hasn't made his projects yet!</p>
                    {{/if}}
                </select>
            </div>

            <div class="form-group">
                <label class="form-label text-bold">Feedback</label>
                <textarea class="form-input textarea" placeholder="Type your feedback here" rows="3"
                    name="description">{{description}}</textarea>
                <button class="btn input-group-btn btn-primary mt-2">Submit</button>
            </div>
        </form>
    {{else}}
        <form action="/projects/feedback/update" method="POST">
            <input type="hidden" name="_csrf" value={{csurfToken}}>
            <input type="hidden" name="feedbackID" value="{{feedback.id}}" />
            <div class="form-group">
                <select class="form-select" name="projectSelect">
                    <option value="{{projectTitle.id}}" name="projectID">{{projectTitle.title}}</option>
                    {{#if projects.length}}
                        {{#each projects}}
                            <option value="{{id}}" name="temp">{{title}}</option>
                        {{/each}}
                    {{else}}
                        <p>This guy hasn't made his projects yet!</p>
                    {{/if}}
                </select>
            </div>

            <div class="form-group">
                <label class="form-label text-bold">Feedback</label>
                <textarea class="form-input textarea" placeholder="Type your feedback here" rows="3"
                    name="description">{{feedback.description}}</textarea>
                <button class="btn input-group-btn btn-primary mt-2">Submit</button>
            </div>
        </form>
    {{/if}}
{{else}}
    <h1>You are not logged in!</h1>
{{/if}}